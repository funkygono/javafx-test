<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.funky.test.javafx.explorer.ExplorerController">
    <top>
        <TextField fx:id="addressTextField" promptText="Address"/>
    </top>

    <center>
        <SplitPane>
            <TreeView fx:id="folderTreeView" showRoot="false"/>
            <TableView fx:id="folderTableView">
                <columns>
                    <TableColumn text="Name" fx:id="nameColumn"/>
                    <TableColumn text="Attributes"/>
                </columns>
            </TableView>
        </SplitPane>
    </center>

</BorderPane>

