<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.funky.test.javafx.explorer.FileSizeCellFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.funky.test.javafx.explorer.ExplorerController">
    <top>
        <TextField fx:id="addressTextField" promptText="Address"/>
    </top>

    <center>
        <SplitPane>
            <TreeView fx:id="treeView" showRoot="false" prefWidth="300"/>
            <TabPane tabClosingPolicy="UNAVAILABLE" prefWidth="500">
                <Tab text="Table">
                    <TableView fx:id="tableView">
                        <columns>
                            <TableColumn text="Name" fx:id="nameColumn"/>
                            <TableColumn text="Size" fx:id="sizeColumn">
                                <cellFactory>
                                    <FileSizeCellFactory/>
                                </cellFactory>
                            </TableColumn>
                            <TableColumn text="Type" fx:id="contentTypeColumn"/>
                            <TableColumn text="Last modified" fx:id="lastModifiedColumn"/>
                        </columns>
                    </TableView>
                </Tab>
                <Tab text="List">
                    <ListView fx:id="listView" orientation="HORIZONTAL">
                    </ListView>
                </Tab>
            </TabPane>
        </SplitPane>
    </center>

</BorderPane>
